<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       >

    <bean id="smsMessageSender"
          class="com.nhnacademy.edu.springframework.sender.SmsMessageSender"
          scope="singleton"
          >
    </bean>

    <bean id="emailMessageSender"
          class="com.nhnacademy.edu.springframework.sender.EmailMessageSender"
          scope="singleton"
          >
    </bean>

    <bean id="messageSendService"
          class="com.nhnacademy.edu.springframework.service.MessageSendService"
          >
        <property name="messageSender" ref="smsMessageSender"></property>
        <!--name 으로 set메서드를 찾고 ref에 있는 id의 스프린 빈 객체를 set메서드 파라미터로 주입-->
    </bean>
</beans>